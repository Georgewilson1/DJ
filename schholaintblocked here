        const footballButton = document.getElementById("football-button");
        const game2Button = document.getElementById("game2-button");

        // Function to open a mini-game
        function openMiniGame(miniGameURL) {
            // Open the mini-game in a new window or tab
            window.open(miniGameURL, "_blank");
        }

        // Event listener for the football mini-game button
        footballButton.addEventListener("click", () => {
            // Specify the local file URL of your football mini-game HTML file
            const footballGameURL = "file:///C:/Users/George/OneDrive/Desktop/FootballMiniGame.html";
            openMiniGame(footballGameURL);
        });

        // Event listener for the Game 2 button (replace with your own URL)
        game2Button.addEventListener("click", () => {
            // Specify the local file URL of your Game 2 HTML file
            const game2URL = "file:///C:/Users/George/OneDrive/Desktop/Game2.html";
